{% doc %}
  @prompt
    generate a collection banner
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-banner-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-collection-banner__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.banner_height_mobile }}px;
  }

  .ai-collection-banner__image-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-collection-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-collection-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collection-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-collection-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
  }

  .ai-collection-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.text_alignment }};
    justify-content: {{ block.settings.vertical_alignment }};
    min-height: {{ block.settings.banner_height_mobile }}px;
    padding: 40px 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-banner__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size_mobile }}px;
    font-weight: 700;
    margin: 0 0 12px;
    max-width: 100%;
    line-height: 1.2;
  }

  .ai-collection-banner__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size_mobile }}px;
    margin: 0 0 24px;
    max-width: 600px;
    line-height: 1.5;
  }

  .ai-collection-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 28px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .ai-collection-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (min-width: 750px) {
    .ai-collection-banner__wrapper-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_desktop }}px;
    }

    .ai-collection-banner__content-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_desktop }}px;
      padding: 60px 40px;
    }

    .ai-collection-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_desktop }}px;
    }

    .ai-collection-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_desktop }}px;
    }
  }
{% endstyle %}

<collection-banner-{{ ai_gen_id }}
  class="ai-collection-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-banner__wrapper-{{ ai_gen_id }}">
    <div class="ai-collection-banner__image-container-{{ ai_gen_id }}">
      {% if block.settings.banner_image %}
        <img
          src="{{ block.settings.banner_image | image_url: width: 2000 }}"
          alt="{{ block.settings.banner_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.banner_image.width }}"
          height="{{ block.settings.banner_image.height }}"
          class="ai-collection-banner__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-collection-banner__placeholder-{{ ai_gen_id }}">
          {{ 'collection-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      {% if block.settings.show_overlay %}
        <div class="ai-collection-banner__overlay-{{ ai_gen_id }}"></div>
      {% endif %}
    </div>

    <div class="ai-collection-banner__content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h1 class="ai-collection-banner__title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
      {% elsif collection.title %}
        <h1 class="ai-collection-banner__title-{{ ai_gen_id }}">{{ collection.title }}</h1>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-collection-banner__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% elsif collection.description != blank %}
        <div class="ai-collection-banner__description-{{ ai_gen_id }}">{{ collection.description }}</div>
      {% endif %}

      {% if block.settings.show_button and block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-collection-banner__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</collection-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.init();
      }

      init() {
        const image = this.querySelector('.ai-collection-banner__image-{{ ai_gen_id }}');
        if (image && !image.complete) {
          image.addEventListener('load', () => {
            image.style.opacity = '1';
          });
        }
      }
    }

    customElements.define('collection-banner-{{ ai_gen_id }}', CollectionBanner{{ ai_gen_id }});
  })();
</script>

